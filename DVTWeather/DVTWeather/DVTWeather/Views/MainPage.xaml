             BackgroundColor="White" Padding="0" Title="{Binding Title}">
 <ContentPage.Resources>
        <ResourceDictionary>
            <converter:WeatherIconConverter x:Key="weatherIconConverter" />
            <converter:BackgroundImageConverter x:Key="backgroundImageConverter" />
