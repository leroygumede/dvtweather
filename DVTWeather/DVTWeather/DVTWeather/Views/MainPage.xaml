              <AbsoluteLayout VerticalOptions="FillAndExpand"  Margin="0, 0, 0, -5" HorizontalOptions="FillAndExpand">
            <Image  Source="{Binding CurrentConditions.weather[0].id, Converter={StaticResource backgroundImageConverter}}"  Aspect="Fill" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 1, 1, 1" />
